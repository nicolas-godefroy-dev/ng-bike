// Default eslintrc for packages without one, or files outside a package
{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "ignorePatterns": ["**/coverage", "**/dist", "**/node_modules"]
}
