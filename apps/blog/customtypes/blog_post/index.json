{
  "id": "blog_post",
  "label": "blog post",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": { "config": { "label": "UID" }, "type": "UID" },
      "title": { "type": "Text", "config": { "label": "title", "placeholder": "" } },
      "excerpt": { "type": "Text", "config": { "label": "excerpt", "placeholder": "" } },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "hero": { "type": "SharedSlice" },
            "image": { "type": "SharedSlice" },
            "rich_text": { "type": "SharedSlice" },
            "faq": { "type": "SharedSlice" }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": { "label": "Meta Description", "placeholder": "A brief summary of the page" },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": { "height": 1260, "width": 2400 },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
