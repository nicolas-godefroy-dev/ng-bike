{
  "extends": "@ng-bike/ts-config-react-native",
  "include": ["."],
  "exclude": [
    "node_modules",
    ".expo",
    "coverage",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "dist",
    "build"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@routes/*": ["src/routes/*"],
      "@constants/*": ["src/constants/*"],
      "@assets/*": ["src/assets/*"],
      "@hooks/*": ["src/hooks/*"],
      "@libs/*": ["src/libs/*"],
      "@services/*": ["src/services/*"]
    }
  }
}
