{
  "name": "@ng-bike",
  "version": "1.0.0",
  "author": "nicolas-godefroy-dev",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/scripts/*"
  ],
  "scripts": {
    "deps:check": "yarn dedupe --check",
    "test": "yarn workspaces foreach -v run test",
    "typecheck": "yarn workspaces foreach -v run typecheck",
    "lint": "yarn workspaces foreach -v run lint"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npx eslint --fix"
    ],
    "*.{md,json}": "npx prettier --write"
  },
  "dependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@ng-bike/tailwind-config": "*",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "typescript": "^5.0.0"
  },
  "resolutions": {
    "metro": "0.76.0",
    "metro-resolver": "0.76.0",
    "@expo/config-plugins": "~6.0.0"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "packageManager": "yarn@3.6.0"
}
