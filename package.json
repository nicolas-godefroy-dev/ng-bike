{
  "name": "@ng-bike",
  "version": "1.0.0",
  "author": "nicolas-godefroy-dev",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/scripts/*"
  ],
  "scripts": {
    "deps:check": "syncpack list-mismatches && yarn dedupe --check",
    "test": "yarn workspaces foreach -v run test",
    "typecheck": "yarn workspaces foreach -v run typecheck",
    "lint": "yarn workspaces foreach -v run lint",
    "lint:fix": "yarn workspaces foreach -v run lint:fix",
    "app:dev": "yarn workspace @ng-bike/app run start",
    "api:dev": "yarn workspace @ng-bike/blog run dev",
    "blog:dev": "yarn workspace @ng-bike/blog run dev"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npx eslint --fix"
    ],
    "*.{md,json}": "npx prettier --write"
  },
  "dependencies": {
    "@commitlint/cli": "17.6.6",
    "@commitlint/config-conventional": "17.6.6",
    "@ng-bike/tailwind-config": "*",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "syncpack": "10.6.1",
    "typescript": "^5.1.3"
  },
  "resolutions": {
    "next": "13.4.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.71.8",
    "metro": "0.76.7",
    "metro-resolver": "0.76.7",
    "@expo/config-plugins": "~6.0.0"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "packageManager": "yarn@3.6.1"
}
