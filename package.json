{
  "name": "@ng-bike",
  "version": "1.0.0",
  "author": "nicolas-godefroy-dev",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "deps:check": "syncpack list-mismatches && yarn dedupe --check",
    "test": "yarn workspaces foreach -v run test",
    "typecheck": "yarn workspaces foreach -v run typecheck",
    "lint": "yarn workspaces foreach -v run lint",
    "lint:fix": "yarn workspaces foreach -v run lint:fix",
    "checks": "yarn deps:check && yarn test && yarn lint && yarn typecheck",
    "dev:app": "yarn workspace @ng-bike/app run start",
    "dev:api": "yarn workspace @ng-bike/blog run dev",
    "dev:blog": "yarn workspace @ng-bike/blog run dev",
    "storybook:blog": "yarn workspace @ng-bike/blog run dev:storybook",
    "slicemachine:blog": "yarn workspace @ng-bike/blog run start:slicemachine"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npx eslint --fix"
    ],
    "*.{ts,tsx,js,jsx,md,json}": "npx prettier --write"
  },
  "dependencies": {
    "@commitlint/cli": "17.6.6",
    "@commitlint/config-conventional": "17.6.6",
    "@ng-bike/tailwind-config": "*",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "syncpack": "10.7.2",
    "typescript": "^5.1.3"
  },
  "resolutions": {
    "next": "13.4.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.1",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "packageManager": "yarn@3.6.1"
}
